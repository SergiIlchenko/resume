{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            <h1>Web languages</h1>
        </section>
        <hr />
        <section>
            {{#with web}}
            <ul>
                {{#each languages}}
                <li>
                    <div>Language: {{name}}</div>
                    <div>Version: {{version}}</div>
                    <div>Description: {{description}}</div>
                    <br>
                    <ul>
                        {{#each elements}}
                        <li>
                            <div>Element: {{name}}</div>
                            <div>Description: {{description}}</div>
                            <br>
                            <ul>
                                {{#each attributes}}
                                <li>
                                    <div>Attribute: {{name}}</div>
                                    <div>Description: {{description}}</div>
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                    <ul>
                        {{#each properties}}
                        <li>
                            <div>Propertie: {{name}}</div>
                            <div>Description: {{description}}</div>
                            <br>
                            <ul>
                                {{#each values}}
                                <li>
                                    <div>Color: {{value}}</div>
                                    <div>Description: {{description}}</div>
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                    <ul>
                        {{#each functions}}
                        <li>
                            <div>Function: {{name}}</div>
                            <div>Description: {{description}}</div>
                            <br>
                            <ul>
                                {{#each parameters}}
                                <li>
                                    <div>Parameter: {{name}}</div>
                                    <div>Type: {{type}}</div>
                                    <div>Description: {{description}}</div>
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/with}}
        </section>
    </main>
</div>

